@{
    ViewData["Title"] = "Home Page";
}

<main id="site__main" class="2xl:ml-[--w-side]  xl:ml-[--w-side-sm] p-2.5 h-[calc(100vh-var(--m-top))] mt-[--m-top]">
    <div class="lg:flex 2xl:gap-16 gap-12 max-w-[1065px] mx-auto" id="js-oversized">

        <section class="max-w-[680px] mx-auto">
            <div class="mb-8">
                <h3 class="font-extrabold text-2xl  text-black hidden">Stories</h3>

                <div class="relative" tabindex="-1" uk-slider="auto play: true;finite: true" uk-lightbox="">
                    <div class="pt-2 uk-slider-container">
                        <ul class="uk-slider-items w-[calc(100%+14px)]" uk-scrollspy="target: > li; cls: uk-animation-scale-up; delay: 20;repeat:true">

                            <li class="md:pr-3" uk-scrollspy-class="uk-animation-fade">
                                <div class="md:w-16 md:h-16 w-12 h-12 rounded-full relative border-2 border-dashed grid place-items-center bg-slate-200 border-slate-300 shrink-0"
                                     uk-toggle="target: #create-story">
                                    <ion-icon name="camera" class="text-2xl"></ion-icon>
                                </div>
                            </li>

                            <li class="md:pr-3 pr-2 hover:scale-[1.15] hover:-rotate-2 duration-300">
                                <a href="~/images/avatar/user.jpg">
                                    <div class="md:w-16 md:h-16 w-12 h-12 relative md:border-4 border-2 shadow border-white rounded-full overflow-hidden">
                                        <img src="~/images/avatar/user.jpg" />
                                    </div>
                                </a>
                            </li>

                            <li class="md:pr-3 pr-2">
                                <div class="md:w-16 md:h-16 w-12 h-12 bg-slate-200/60 rounded-full animate-pulse"></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="md:max-w-[580px] mx-auto flex-1 xl:space-y-6 space-y-3">

                <div class="bg-white rounded-xl shadow-sm md:p-4 p-2 space-y-4 text-sm font-medium border1">
                    <div class="flex items-center md:gap-3 gap-1">
                        <div class="flex-1 bg-slate-100 hover:bg-opacity-80 transition-all rounded-lg cursor-pointer" uk-toggle="target: #create-status">
                            <div class="py-2.5 text-center bg-secondery rounded-lg">Share something with friends</div>
                        </div>
                        <div class="cursor-pointer hover:bg-opacity-80 p-1 px-1.5 rounded-xl transition-all bg-pink-100/60 hover:bg-pink-100" uk-toggle="target: #create-status">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 stroke-pink-600 fill-pink-200/70" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M15 8h.01" />
                                <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />
                                <path d="M3.5 15.5l4.5 -4.5c.928 -.893 2.072 -.893 3 0l5 5" />
                                <path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l2.5 2.5" />
                            </svg>
                        </div>
                    </div>

                </div>

                <div class="bg-white rounded-xl shadow-sm text-sm font-medium border1">

                    <div class="flex gap-3 sm:p-4 p-2.5 text-sm font-medium">
                        <a>
                            <img src="~/images/avatar/user.jpg" class="w-9 h-9 rounded-full" />
                        </a>
                        <div class="flex-1">
                            <a>
                                <h4 class="text-black">Test Bot</h4>
                                <div class="text-xs text-secondary">1 day ago</div>
                            </a>
                        </div>

                        <div class="-mr-1">
                            <button type="button" class="button-icon w-8 h-8">
                                <svg width="20px" height="20px" viewBox="-0.5 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 14.5C13.1046 14.5 14 13.6046 14 12.5C14 11.3954 13.1046 10.5 12 10.5C10.8954 10.5 10 11.3954 10 12.5C10 13.6046 10.8954 14.5 12 14.5Z" stroke="#0F0F0F" stroke-miterlimit="10" />
                                    <path d="M19.5 14.5C20.6046 14.5 21.5 13.6046 21.5 12.5C21.5 11.3954 20.6046 10.5 19.5 10.5C18.3954 10.5 17.5 11.3954 17.5 12.5C17.5 13.6046 18.3954 14.5 19.5 14.5Z" stroke="#0F0F0F" stroke-miterlimit="10" />
                                    <path d="M4.5 14.5C5.60457 14.5 6.5 13.6046 6.5 12.5C6.5 11.3954 5.60457 10.5 4.5 10.5C3.39543 10.5 2.5 11.3954 2.5 12.5C2.5 13.6046 3.39543 14.5 4.5 14.5Z" stroke="#0F0F0F" stroke-miterlimit="10" />
                                </svg>
                            </button>
                            <div class="w-[245px]" uk-dropdown="pos: bottom-right; animation: uk-animation-scale-up uk-transform-origin-top-right; animate-out: true; mode: click">
                                <form>
                                    <input type="hidden" name="postId" />
                                    <button type="submit" class="hover:!bg-red-50 icon-link">
                                        <ion-icon name="lock-closed-outline"></ion-icon> Private
                                    </button>
                                </form>

                                <hr>
                                <form asp-controller="Home" asp-action="Delete">
                                    <input type="hidden" name="postId" />
                                    <button type="submit" class="text-red-400 hover:!bg-red-50 icon-link">
                                        <ion-icon name="trash-bin-outline"></ion-icon> Delete
                                    </button>
                                </form>
                                <form asp-controller="Home" asp-action="Report">
                                    <input type="hidden" name="postId" />
                                    <button type="submit" class="hover:!bg-red-50 icon-link">
                                        <ion-icon class="text-xl shrink-0" name="flag-outline"></ion-icon> Report
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <a>
                        <div class="sm:px-4 p-2.5 pt-0 w-full">
                            <p class="font-normal">
                                Test
                            </p>
                        </div>
                    </a>

                    <a>
                        <div class="relative w-full lg:h-96 h-full sm:px-4">
                            @* Image Credits: Martin Masson | Unsplash *@
                            <img src="~/images/photo-unsplash.jpg" class="sm:rounded-lg w-full h-full object-cover" />
                        </div>
                    </a>

                    <div class="sm:p-4 p-2.5 flex items-center gap-4 text-xs font-semibold text-black">

                        <div class="flex items-center">
                            <a class="button-icon text-red-500 bg-red-100">
                                <ion-icon class="text-lg" name="heart"></ion-icon>
                            </a>
                            <a href="#">24</a>
                        </div>

                        <div class="flex items-center">
                            <a class="button-icon">
                                <ion-icon class="text-lg" name="chatbubble-ellipses-outline"></ion-icon>
                            </a>
                            <a href="#">5</a>
                        </div>

                        <div class="ml-auto"></div>

                        <div>
                            <a class="button-icon ml-auto">
                                <ion-icon class="text-lg" name="bookmark-outline"></ion-icon>
                            </a>
                        </div>
                    </div>

                    <div>
                        <div class="sm:px-4 sm:py-3 p-2.5 border-t border-gray-100 flex items-center gap-1">
                            <img src="~/images/avatar/user.jpg" class="w-6 h-6 rounded-full" />

                            <div class="flex-1 relative overflow-hidden h-10">
                                <textarea placeholder="Reply" rows="1" class="w-full resize-none px-4 py-2"></textarea>
                            </div>

                            <button class="text-sm rounded-full py-1.5 px-3.5 bg-secondery">Reply</button>

                        </div>
                    </div>

                </div>
            </div>

        </section>
        <div class="flex-1">
            <div class="lg:space-y-4 lg:pb-8 max-lg:grid sm:grid-cols-2 max-lg:gap-6">
                <div class="box p-4 px-6">
                    <partial name="Sidebar/_RecommendedFriends"></partial>
                </div>
            </div>
        </div>
    </div>
</main>

<partial name="Modals/_CreateStory" />
<partial name="Modals/_CreateStatus" />